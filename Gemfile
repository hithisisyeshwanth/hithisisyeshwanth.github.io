# The source for gems.
source "https://rubygems.org"

# Use the GitHub Pages gem.
gem "github-pages", group: :jekyll_plugins

# Required for Windows.
gem "tzinfo-data"
gem "wdm", "~> 0.1.0" if Gem.win_platform?

# If you have any plugins, put them here!
group :jekyll_plugins do
  # Paginate posts.
  gem "jekyll-paginate"
  # Generate a sitemap.
  gem "jekyll-sitemap"
  # Embed Gists.
  gem "jekyll-gist"
  # Generate an Atom feed.
  gem "jekyll-feed"
  # Use emojis in posts.
  gem "jemoji"
  # Cache included files.
  gem "jekyll-include-cache"
  # Add search with Algolia.
  gem "jekyll-algolia"
end

# Required for Jekyll 4.
gem "webrick", "~> 1.9"
